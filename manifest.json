{
  "manifest_version": 2,

  "name": "IMDB Quick Search",
  "description": "Quickly find IMDB pages using suggestions in the search box",
  "version": "1.0",
  "omnibox": { "keyword" : "imdb"},
  "icons" : {
    "16": "img/logo16.png",
    "32": "img/logo32.png",
    "48": "img/logo48.png"
  },

  "background": {
    "scripts" : ["js/background.js"],
    "persistent": false
  },

  "permissions" : [
    "http://www.imdb.com/",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "img/logo16.png"
  }

}
